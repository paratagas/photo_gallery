<%- include('partials/header') %>

        <div class="page-header">
            <h1><%= title %></h1>
            <p class="subtitle">Image gallery and store application</p>
        </div>
        <a class="btn btn-info btn-lg customized" id="submit" href="/upload" role="button">Upload image</a>
        <div id="photos">
            <% photos.forEach(function(photo) { %>
            <div class="photo" id=<%=photo._id%> data-rotate="0">
                <h2><%=photo.name%></h2>
                <a href='/photo/<%=photo._id%>'>
                    <img src='/images/<%=photo.path%>' class='gallery-images'>
                </a>
                <button type='submit' id=<%=photo._id + "_rotate" %> class='btn btn-info rotator'>
                    <span class="glyphicon glyphicon-share-alt"></span>
                </button>
            </div>
            <% }) %>
        </div>

<%- include('partials/footer') %>
